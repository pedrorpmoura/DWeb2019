extends layout

block content
  .w3-modal(style='display:block;')
    .w3-modal-content.w3-card-4
      header.w3-container.w3-teal.w3-card-4.w3-center
        h3 #{movie.title}
      .w3-container.w3-margin.w3-padding.w3-section
        form#form.w3-container.w3-padding-16(onsubmit='return sendEditarItem("' + movie._id +'")')
          b
            label Title
          input.w3-input.w3-border(type="text" name="title", value=movie.title)
          br
          b
            label Year
          input.w3-input.w3-border(type="text" name="year" value=movie.year)
          br
          b
            label Cast
          input.w3-input.w3-border(type="text" name="cast" value=movie.cast)
          br
          b
            label Genres
          input.w3-input.w3-border(type="text" name="genre" value=movie.genres)
          br
          input.w3-btn.w3-blue-gray(type="submit" value="Edit")
        a(href='/movies')
          button.w3-right.w3-btn.w3-blue-gray Voltar 