each task in tasks
    if task.is_done
        .w3-container.w3-third
            .w3-card-2(align='center').w3-pale-green.w3-padding-24.w3-margin-bottom
                h3= task.name
                hr
                p Até 
                    b= task.limit_date
    else
        .w3-container.w3-third
            .w3-card-2(align='center').w3-padding-24.w3-margin-bottom
                h3= task.name
                hr
                p Até 
                    b= task.limit_date